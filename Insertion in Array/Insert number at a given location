#include<stdio.h>
int main() {
    int loc,num,i,n;
    int arr[20];
    printf("Enter the number of elements:");
    scanf("%d",&num);
    printf("Enter elements:");
    for(i=0;i<num;i++){
        scanf("%d",&arr[i]);
    }
    printf("Enter the number to be inserted");
    scanf("%d",&n);
    printf("Enter the position at which the number has to be added:");
    scanf("%d",&loc);
    //shifting elements from index loc.
    i=num;
    while(i>=loc){
        arr[i+1]=arr[i];
        i--;
    }
    arr[loc]=n;
    printf("Array after insertion:");
    for(i=0;i<num+1;i++){
        printf("%d ",arr[i]);
    }
    return 0;

}
 // other way
#include<stdio.h>
int main() {
    int loc,num,i,n;
    int arr[20];
    printf("Enter the number of elements:");
    scanf("%d",&num);
    printf("Enter elements:");
    for(i=0;i<num;i++){
        scanf("%d",&arr[i]);
    }
    printf("Enter the number to be inserted");
    scanf("%d",&n);
    printf("Enter the position at which the number has to be added:");
    scanf("%d",&loc);
    i=loc;
    while(i<num){
        arr[i+1]=arr[i];
        i++;
    }
    arr[loc]=n;
    printf("Array after insertion:");
    for(i=0;i<num+1;i++){
        printf("%d ",arr[i]);
    }
    return 0;
}
